<div class="container">
<h1><center>REALIZADOS</center></h1>
<div class="table-responsive-sm">
<table class="table" id="dttb">
  <thead>
    <tr>
      <th>Descripcion</th>
      <th>Fecha Inicio</th>
      <th>Fecha Final</th>
      <th>Tiempo</th>
      <th>Tarea</th>
      <th>Estado</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @realizados.each do |realizado| %>
      <tr>
        <td><%= realizado.descripcion %></td>
        <td><%= realizado.fecha_ini %></td>
        <td><%= realizado.fecha_fina %></td>
        <td><%= realizado.tiempo %></td>
        <td><%= realizado.tarea.titulo %></td>
        <td>  <div class="badge badge-success">Realizado</div></td>
        <td><%= link_to 'Show', realizado %></td>
        <td><%= link_to 'Modificar', edit_realizado_path(realizado),type:'button', class:'btn btn-outline-warning' %></td>
        <td><%= link_to 'Eliminar', realizado, method: :delete, data: {confirm: 'Estas seguro?' }, type:'button', class:'btn btn-outline-danger'%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
